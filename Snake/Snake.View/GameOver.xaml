<Page x:Class="Snake.Snake.View.GameOver"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Snake.Snake.View"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      FontFamily="Ravie"
      Background="Black"
      Title="GameOver" DataContext="{Binding Path=GameOverViewModel,Source={StaticResource Locator}}">

    <Grid>
        <Canvas>
            <Button Content="Play again?" Command="{Binding ToGameCommand}" Height="41" Canvas.Left="106" Width="187" Canvas.Top="173" RenderTransformOrigin="0.705,0.707" Foreground="#FFADA700" Background="Black" FontSize="24"/>
        </Canvas>
    </Grid>
</Page>
