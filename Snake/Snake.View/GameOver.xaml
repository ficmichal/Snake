<Page x:Class="Snake.Snake.View.GameOver"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Snake.Snake.View"
      mc:Ignorable="d" 
      d:DesignHeight="330" d:DesignWidth="330"
      Title="GameOver" DataContext="{Binding Path=GameOverViewModel,Source={StaticResource Locator}}">

    <Grid>
        <StackPanel>
            <Label Content="{Binding TextLabel}" Height="58" Margin="0,0,-0.4,0"/>
            <Button Command="{Binding GameOverCommand}" Height="35" Margin="0,0,-0.4,0"/>
        </StackPanel>
    </Grid>
</Page>
