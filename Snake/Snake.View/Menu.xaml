<Page x:Class="Snake.View.MenuView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Snake.View"
      mc:Ignorable="d" 
      d:DesignHeight="330" d:DesignWidth="330"
      Title="Menu" DataContext="{Binding Path=MenuViewModel,Source={StaticResource Locator}}">

    <Grid>
        <Canvas HorizontalAlignment="Left" Height="330" VerticalAlignment="Top" Width="330" Margin="0,0,0,-22.8">
            <Button Command="{Binding GameOverCommand}" Content="Play!" Height="139" Canvas.Left="87" Canvas.Top="102" Width="206" Background="Black" BorderBrush="Black" Foreground="#FFADA700" FontFamily="Ravie" FontSize="36"/>
            <Label Content="{Binding TextLabel}" Foreground="GhostWhite" Height="62" FontFamily="Ravie" Canvas.Left="10" Canvas.Top="10" Width="165"/>
            <TextBox Text="{Binding Nickname}" Height="38" Canvas.Left="209" TextWrapping="Wrap" Canvas.Top="34" Width="84" Background="Black" Foreground="White" FontFamily="Ravie" FontSize="8" SelectionBrush="Black" BorderBrush="Black"/>
        </Canvas>
    </Grid>
</Page>
